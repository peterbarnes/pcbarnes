.primary_blue
  .container 
    .row
      .col-md-12
        .col-md-6.col-md-offset-3
          = form_tag("/send", method: "post") do 
            .form-group
              = label_tag(:name, params[:name], class: 'sr-only')
              = text_field_tag(:name, params[:name], class: 'lead input-lg form-control long-text square', placeholder: "Name")

            .form-group
              = label_tag(:email, params[:email], class: 'sr-only')
              = text_field_tag(:email, params[:email], class: "lead input-lg form-control long-text square", placeholder: "Email")

            .form-group
              = label_tag(:body, params[:body], class: "sr-only")
              = text_area_tag(:body, params[:body], class: "lead input-lg form-control long-text square", placeholder: "Message", rows: '5')

            %button.btn.btn-primary.btn-block.btn-lg.long-text.lead.square{ type: 'submit' }
              %i.fa.fa-envelope-o
              Send
:javascript
  $("#smoothScroll a").click(function() {
    var id = $(this).attr("href");
    $("body").animate({scrollTop: $(id).offset().top}, "slow");
    return false;
  });
